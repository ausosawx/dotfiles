{
    // general settings
    "clangd.arguments": [
        "--clang-tidy",
        "--query-driver=/usr/bin/clang",
        "--all-scopes-completion",
        "--suggest-missing-includes",
        "--completion-style=detailed",
        "--header-insertion=iwyu"
    ],
    "editor.fontSize": 16,
    "editor.fontLigatures": true,
    "editor.fontFamily": "'SauceCodePro Nerd Font', 'Noto Sans CJK SC', 'SauceCodePro Nerd Font'",
    "editor.inlineSuggest.enabled": true,
    "editor.formatOnType": true,
    "editor.formatOnSave": true,
    "editor.guides.bracketPairs": "active",
    "editor.guides.indentation": true,
    "editor.cursorBlinking": "phase",
    "extensions.autoCheckUpdates": false,
    "extensions.autoUpdate": false,
    "files.autoSave": "afterDelay",
    "files.autoGuessEncoding": true,
    "julia.symbolCacheDownload": false,
    "julia.enableTelemetry": false,
    "lldb.launch.terminal": "integrated",
    "security.workspace.trust.untrustedFiles": "open",
    "terminal.integrated.cursorStyle": "underline",
    "terminal.integrated.defaultProfile.linux": "zsh",
    "terminal.integrated.fontSize": 16,
    "terminal.external.linuxExec": "kitty",
    "terminal.integrated.customGlyphs": false,
    "terminal.integrated.commandsToSkipShell": [
        "language-julia.interrupt"
    ],
    "update.showReleaseNotes": false,
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorTheme": "Catppuccin Mocha",
    "workbench.colorCustomizations": {
        "editorIndentGuide.background": "#333333",
        "editorIndentGuide.activeBackground": "#a3a3a3"
    },
    "workbench.editorAssociations": {
        "*.pdf": "latex-workshop-pdf-hook"
    },
    "workbench.statusBar.visible": true,
    "window.zoomLevel": 0,
    "window.titleBarStyle": "native",
    "window.menuBarVisibility": "toggle",
    "workbench.settings.enableNaturalLanguageSearch": false,
    "PandocCiter.DefaultBib": "/home/wx/Zotero/bib/test.bib",
    "zotero-citation-picker.port": "http://127.0.0.1:23119/better-bibtex/cayw?minimize=1&format=playground&keyprefix=\\cite{&keypostfix=}",
    // "zotero-citation-picker.port": "http://127.0.0.1:23119/better-bibtex/cayw?format=pandoc",
    // latex settings
    "latex-workshop.intellisense.package.enabled": true,
    "latex-workshop.latex.autoBuild.run": "never",
    "latex-workshop.latex.clean.subfolder.enabled": true,
    "latex-workshop.latex.autoClean.run": "onBuilt",
    "latex-workshop.latex.recipe.default": "lastUsed",
    "latex-workshop.message.error.show": false,
    "latex-workshop.message.warning.show": true,
    "latex-workshop.showContextMenu": true,
    "latex-workshop.texcount.autorun": "onSave",
    // zathura viewer
    // "latex-workshop.view.pdf.viewer": "external",
    // "latex-workshop.view.pdf.external.viewer.command": "zathura",
    // "latex-workshop.view.pdf.external.viewer.args": [
    //     "--synctex-editor-command",
    //     "vscodium --no-sandbox -r -g \"%{input}:%{line}\"",
    //     "%PDF%"
    // ],
    // "latex-workshop.view.pdf.external.synctex.command": "zathura",
    // "latex-workshop.view.pdf.external.synctex.args": [
    //     "--synctex-forward=%LINE%:0:%TEX%",
    //     "%PDF%"
    // ],
    // evince viewer
    "latex-workshop.view.pdf.viewer": "external",
    "latex-workshop.view.pdf.external.viewer.command": "evince2",
    "latex-workshop.view.pdf.external.viewer.args": [
        "%PDF%"
    ],
    "latex-workshop.view.pdf.external.synctex.command": "evince_forward_search",
    "latex-workshop.view.pdf.external.synctex.args": [
        "%PDF%",
        "%LINE%",
        "%TEX%"
    ],
    "latex-workshop.latex.tools": [
        {
            "name": "XeLaTeXmk",
            "command": "latexmk",
            "args": [
                "-xelatex",
                "-synctex=1",
                "-shell-escape",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%"
            ]
        },
        {
            "name": "pdfLaTeXmk",
            "command": "latexmk",
            "args": [
                "-pdflatex",
                "-synctex=1",
                "-shell-escape",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%"
            ]
        },
        {
            "name": "LuaLaTeXmk",
            "command": "latexmk",
            "args": [
                "-lualatex",
                "-synctex=1",
                "-shell-escape",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%"
            ]
        },
        {
            "name": "LaTeXmk-DVIPDFMx",
            "command": "latexmk",
            "args": [
                "-e",
                "$dvipdf='dvipdfmx %O -o %D %S'",
                "-latex",
                "-pdfdvi",
                "-synctex=1",
                "-shell-escape",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%"
            ]
        },
        {
            "name": "upLaTeXmk-DVIPDFMx",
            "command": "latexmk",
            "args": [
                "-e",
                "$dvipdf='dvipdfmx %O -o %D %S'",
                "-latex=uplatex",
                "-pdfdvi",
                "-synctex=1",
                "-shell-escape",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%"
            ]
        }
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "XeLaTeXmk",
            "tools": [
                "XeLaTeXmk"
            ]
        },
        {
            "name": "pdfLaTeXmk",
            "tools": [
                "pdfLaTeXmk"
            ]
        },
        {
            "name": "LuaLaTeXmk",
            "tools": [
                "LuaLaTeXmk"
            ]
        },
        {
            "name": "LaTeXmk-DVIPDFMx",
            "tools": [
                "LaTeXmk-DVIPDFMx"
            ]
        },
        {
            "name": "upLaTeXmk-DVIPDFMx",
            "tools": [
                "upLaTeXmk-DVIPDFMx"
            ]
        }
    ],
    "latex-workshop.latex.clean.fileTypes": [
        "*.aux",
        "*.bbl",
        "*.blg",
        "*.idx",
        "*.ind",
        "*.lof",
        "*.lot",
        "*.out",
        "*.toc",
        "*.acn",
        "*.acr",
        "*.alg",
        "*.glg",
        "*.glo",
        "*.gls",
        "*.ist",
        "*.fls",
        "*.log",
        "*.fdb_latexmk",
        "*.bcf",
        "*.run.xml",
        "*.xdv"
    ],
    // prevent any italics from showing
    "editor.tokenColorCustomizations": {
        "[Catppuccin Frapp√©][Catppuccin Macchiato][Catppuccin Mocha]": {
            "textMateRules": [
                {
                    "scope": [
                        "entity.name.function",
                        "support.function",
                        "variable.parameter.function",
                        "variable.parameter.function-call",
                        "constant.language",
                        "entity.name.function.rust",
                        "keyword.control.rust",
                        "variable.language.rust",
                        "variable.other.rust",
                        "variable.other.lua",
                        "keyword.control.directive",
                        "keyword.other.using.directive",
                        "punctuation.definition.directive",
                        "entity.name.other.preprocessor.macro.predefined.probably",
                        "entity.name.scope-resolution.cpp",
                        "string.quoted.docstring.multi",
                        "string.quoted.multi",
                        "source.python string.quoted.docstring.multi.python punctuation.definition.string.begin.python",
                        "source.python string.quoted.docstring.multi.python punctuation.definition.string.end.python",
                        "source.python string.quoted.multi.python punctuation.definition.string.begin.python",
                        "source.python string.quoted.multi.python punctuation.definition.string.end.python",
                        "markup.fenced_code.block",
                        "meta.function-call.generic.python",
                        "entity.name.function",
                        "meta.require",
                        "support.function.any-method",
                        "variable.function",
                        "markup.italic",
                        "punctuation.definition.italic",
                        "todo.emphasis",
                        "comment",
                        "punctuation.definition.comment",
                        "comment.line.double-slash",
                        "comment.block.documentation",
                        "keyword.control.import.python",
                        "storage.type.function.python",
                        "markup.italic.markdown",
                        "entity.other.attribute-name.ts",
                        "entity.other.attribute-name.js",
                        "entity.other.attribute-name.jsx",
                        "entity.other.attribute-name.tsx",
                        "variable.parameter",
                        "variable.language.super"
                    ],
                    "settings": {
                        "fontStyle": ""
                    }
                }
            ]
        }
    },
}